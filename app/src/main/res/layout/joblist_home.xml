<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/card_round_list"
            android:padding="10dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/card_status"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"

                android:textSize="15sp"

                android:id="@+id/status"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colum"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testing"
                    android:textSize="16sp"
                    android:id="@+id/tv_name_job"
                    android:layout_marginLeft="10dp"

                    android:textStyle="bold"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colum"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testing"
                    android:textSize="16sp"
                    android:id="@+id/tv_mob_job"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colum"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testing"
                    android:textSize="16sp"
                    android:id="@+id/tv_email_job"
                    android:layout_marginLeft="10dp"

                    android:textStyle="bold"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colum"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testing"
                    android:textSize="16sp"
                    android:id="@+id/tv_add_job"
                    android:layout_marginLeft="10dp"

                    android:textStyle="bold"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colum"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testing"
                    android:textSize="16sp"
                    android:id="@+id/tv_time_job"
                    android:layout_marginLeft="10dp"

                    android:textStyle="bold"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining Time"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colum"
                    android:padding="5dp"
                    android:textSize="16sp"

                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testing"
                    android:textSize="16sp"
                    android:id="@+id/tv_remingtime_job"
                    android:layout_marginLeft="10dp"

                    android:textStyle="bold"
                    android:padding="5dp"
                    />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>